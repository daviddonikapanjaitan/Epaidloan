<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".SentMoneyActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/easypayaja" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sent Money"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Contact"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please put some of your money to  sent to your friend or family"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/userNameFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName : DavidKeren"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/phoneNumberSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone : 0811600178"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note : This money will be sent to your friend or family, immediately"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/totalMoneySent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Total Money to Sent (Rp)"
        android:inputType="phone"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSentBroX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sent"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSentBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20dp" />

</LinearLayout>