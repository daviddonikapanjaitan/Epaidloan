<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".ListContactPaymentActivity">

    <Button
        android:id="@+id/btnBackToHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back To Previous Page" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/easypayaja" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="List Of Buddies (Sent)"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Note: Please choose sent button to sent some money from list buddies of user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Note : If you doesn't have any buddies yet, or want sent to another buddies, then back to Transfer Page and choose add buddies"/>

    <ListView
        android:id="@+id/listViewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>